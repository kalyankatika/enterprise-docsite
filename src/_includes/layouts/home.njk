---
layout: base
---

<div class="home-hero mb-12">
  <h1 class="text-4xl md:text-5xl font-bold mb-4">{{ hero.title | safe }}</h1>
  
  <div class="text-xl text-[var(--color-text-muted)] mb-8 max-w-3xl">
    {{ hero.description | safe }}
  </div>
  
  <div class="flex flex-wrap gap-4">
    {% for cta in hero.ctas %}
      <a href="{{ cta.url }}" class="eds-btn {% if loop.first %}eds-btn-primary{% else %}eds-btn-secondary{% endif %}">
        {{ cta.label }}
        {% if cta.icon %}
          <svg class="ml-2 h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{ cta.icon }}"></path>
          </svg>
        {% endif %}
      </a>
    {% endfor %}
  </div>
</div>

{% if featured %}
  <div class="featured-section mb-16">
    <h2 class="text-2xl font-semibold mb-6">{{ featured.title }}</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for item in featured.items %}
        <a href="{{ item.url }}" class="eds-card group hover:shadow-md transition-shadow duration-200">
          <div class="flex items-center mb-4">
            {% if item.icon %}
              <div class="bg-[var(--color-bg-alt)] rounded-full p-3 mr-4">
                <svg class="h-6 w-6 text-[var(--color-primary)]" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{ item.icon }}"></path>
                </svg>
              </div>
            {% endif %}
            <h3 class="text-lg font-medium group-hover:text-[var(--color-primary)]">{{ item.title }}</h3>
          </div>
          
          <p class="text-[var(--color-text-muted)]">{{ item.description }}</p>
        </a>
      {% endfor %}
    </div>
  </div>
{% endif %}

<div class="grid grid-cols-1 md:grid-cols-2 gap-12 mb-16">
  {% for section in sections %}
    <div>
      <h2 class="text-2xl font-semibold mb-6">{{ section.title }}</h2>
      
      <ul class="space-y-4">
        {% for item in section.items %}
          <li>
            <a href="{{ item.url }}" class="block p-4 border border-[var(--color-border)] rounded-lg hover:border-[var(--color-primary)] hover:shadow-sm transition-all duration-200">
              <div class="flex items-center">
                <h3 class="text-lg font-medium hover:text-[var(--color-primary)]">{{ item.title }}</h3>
                {% if item.badge %}
                  <span class="ml-2 px-2 py-0.5 text-xs rounded-full bg-[{{ item.badge.color or 'var(--color-primary)' }}] text-white">
                    {{ item.badge.text }}
                  </span>
                {% endif %}
              </div>
              
              {% if item.description %}
                <p class="text-[var(--color-text-muted)] mt-1">{{ item.description }}</p>
              {% endif %}
            </a>
          </li>
        {% endfor %}
      </ul>
      
      {% if section.cta %}
        <div class="mt-6">
          <a href="{{ section.cta.url }}" class="inline-flex items-center text-[var(--color-primary)]">
            {{ section.cta.label }}
            <svg class="ml-1 h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      {% endif %}
    </div>
  {% endfor %}
</div>

{{ content | safe }}