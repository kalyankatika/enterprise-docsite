---
layout: layouts/base.njk
---

<div class="eds-page-container">
  {% include "partials/left-navigation.njk" %}
  
  <main class="eds-main-content">
    <div class="eds-page-content">
      <section class="eds-hero py-12 md:py-20 px-4">
        <div class="container mx-auto max-w-6xl">
          <div class="grid md:grid-cols-2 gap-8 items-center">
            <div class="eds-hero-content">
              <h1 class="text-4xl md:text-5xl font-bold mb-6 home-hero-title">{{ title }}</h1>
              <p class="text-xl text-[var(--color-text-muted)] mb-8 home-hero-description">{{ description }}</p>
              <div class="home-hero-cta">
                <a href="{{ cta.url }}" class="animated-button inline-flex items-center justify-center px-6 py-3 bg-[var(--color-primary)] text-white rounded-md hover:bg-[var(--color-primary-dark)] transition-colors">
                  {{ cta.text }}
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                  </svg>
                </a>
              </div>
            </div>
            <div class="eds-hero-image hidden md:block" data-motion="slide-left">
              <div class="rounded-lg bg-[var(--color-bg-alt)] shadow-lg p-8 border border-[var(--color-border)]">
                <div class="eds-code-snippet">
                  <div class="eds-code-snippet-header flex items-center mb-4">
                    <div class="h-3 w-3 rounded-full bg-red-500 mr-2"></div>
                    <div class="h-3 w-3 rounded-full bg-yellow-500 mr-2"></div>
                    <div class="h-3 w-3 rounded-full bg-green-500"></div>
                  </div>
                  <pre class="text-xs font-mono text-[var(--color-text)] overflow-hidden"><code><span class="text-[var(--color-primary)]">import</span> { Button } <span class="text-[var(--color-primary)]">from</span> <span class="text-green-600">'@enterprise/components'</span>;

<span class="text-[var(--color-primary)]">function</span> <span class="text-blue-500">App</span>() {
  <span class="text-[var(--color-primary)]">return</span> (
    <span class="text-indigo-500">&lt;div className=</span><span class="text-green-600">"app"</span><span class="text-indigo-500">&gt;</span>
      <span class="text-indigo-500">&lt;h1&gt;</span>Welcome to EDS<span class="text-indigo-500">&lt;/h1&gt;</span>
      <span class="text-indigo-500">&lt;Button</span> <span class="text-blue-500">variant=</span><span class="text-green-600">"primary"</span><span class="text-indigo-500">&gt;</span>
        Get Started
      <span class="text-indigo-500">&lt;/Button&gt;</span>
    <span class="text-indigo-500">&lt;/div&gt;</span>
  );
}

<span class="text-[var(--color-primary)]">export default</span> App;</code></pre>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      
      <section class="eds-categories py-12 md:py-16 px-4 bg-[var(--color-bg-alt)]">
        <div class="container mx-auto max-w-6xl">
          <h2 class="text-3xl font-bold mb-12 text-center" data-motion="fade-in">Explore the Design System</h2>
          
          <div class="grid md:grid-cols-3 gap-8" data-motion="stagger-children">
            {% for category in categories %}
              <a href="{{ category.url }}" class="animated-card block p-6 bg-[var(--color-bg)] rounded-lg border border-[var(--color-border)] hover:border-[var(--color-primary)]">
                <div class="flex items-center mb-4">
                  <div class="flex-shrink-0 w-12 h-12 mr-4 text-[var(--color-primary)]">
                    {{ category.icon | safe }}
                  </div>
                  <h3 class="text-xl font-bold">{{ category.title }}</h3>
                </div>
                <p class="text-[var(--color-text-muted)] mb-4">{{ category.description }}</p>
                <span class="text-[var(--color-primary)] font-medium inline-flex items-center">
                  View {{ category.title }}
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </span>
              </a>
            {% endfor %}
          </div>
        </div>
      </section>
      
      <section class="eds-content-section py-12 md:py-16 px-4">
        <div class="container mx-auto max-w-4xl">
          <div class="prose dark:prose-invert max-w-none" data-motion="fade-in">
            {{ content | safe }}
          </div>
        </div>
      </section>
      
      <section class="eds-featured-components py-12 md:py-16 px-4 bg-[var(--color-bg-alt)]">
        <div class="container mx-auto max-w-6xl">
          <h2 class="text-3xl font-bold mb-2 text-center">Featured Components</h2>
          <p class="text-lg text-[var(--color-text-muted)] mb-12 text-center">Most commonly used components from our library</p>
          
          <div class="grid md:grid-cols-3 gap-6" data-motion="stagger-children">
            {% for component in featuredComponents %}
              <a href="{{ component.url }}" class="animated-card block p-6 bg-[var(--color-bg)] rounded-lg border border-[var(--color-border)] hover:border-[var(--color-primary)]">
                <h3 class="text-xl font-bold mb-2">{{ component.title }}</h3>
                <p class="text-[var(--color-text-muted)] mb-4">{{ component.description }}</p>
                <span class="text-[var(--color-primary)] font-medium inline-flex items-center">
                  View {{ component.title }}
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </span>
              </a>
            {% endfor %}
          </div>
        </div>
      </section>
    </div>
    
    {% include "partials/footer.njk" %}
  </main>
</div>

<script src="/assets/js/framer-motion-wrapper.js"></script>