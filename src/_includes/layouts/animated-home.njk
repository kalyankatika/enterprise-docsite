<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or site.title }}</title>
  <meta name="description" content="{{ description or site.description }}">
  <link rel="stylesheet" href="/assets/css/styles.css">
  <link rel="stylesheet" href="/assets/css/left-navigation.css">
  <link rel="stylesheet" href="/assets/css/animations.css">
  <script src="/assets/js/alpine.min.js" defer></script>
  <script src="/assets/js/framer-motion-wrapper.js" defer></script>
  <script src="/assets/js/theme.js" defer></script>
  <script src="/assets/js/main.js" defer></script>
</head>
<body class="flex flex-col min-h-screen bg-gray-50 dark:bg-gray-900">
  <header class="bg-white dark:bg-gray-800 shadow-sm sticky top-0 z-40">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <a href="/" class="flex-shrink-0 flex items-center">
            <span class="text-xl font-bold text-blue-600 dark:text-blue-400">EDS</span>
            <span class="ml-2 font-medium text-gray-900 dark:text-white hidden md:block">Enterprise Design System</span>
          </a>
        </div>
        <div class="flex items-center">
          <button id="theme-toggle" class="p-2 rounded-md text-gray-500 hover:text-gray-600 dark:text-gray-400 dark:hover:text-gray-300">
            <!-- Sun icon for dark mode (show in dark mode) -->
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            <!-- Moon icon for light mode (show in light mode) -->
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
            </svg>
          </button>
          <a href="/search/" class="ml-4 p-2 rounded-md text-gray-500 hover:text-gray-600 dark:text-gray-400 dark:hover:text-gray-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </a>
          <button id="mobile-nav-toggle" class="ml-4 p-2 rounded-md text-gray-500 md:hidden">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </header>

  <div class="flex-1 flex">
    <!-- Left Navigation (hidden on mobile, shown on toggle) -->
    <div class="md:block hidden">
      {% include "partials/left-navigation.njk" %}
    </div>
    
    <div id="mobile-nav" class="hidden md:hidden fixed inset-0 z-30">
      <div class="absolute inset-0 bg-gray-900 bg-opacity-50" id="mobile-nav-backdrop"></div>
      <div class="absolute inset-y-0 left-0 w-64 bg-white dark:bg-gray-800 shadow-xl overflow-y-auto transform transition-transform duration-300 ease-in-out">
        {% include "partials/left-navigation.njk" %}
      </div>
    </div>

    <!-- Main Content -->
    <main class="flex-1 overflow-y-auto">
      <!-- Hero Section -->
      <section class="py-16 px-6 md:px-10 lg:px-16 bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-gray-800 dark:to-indigo-900">
        <div class="max-w-4xl mx-auto">
          <h1 class="eds-hero-title text-4xl sm:text-5xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6">
            {{ title }}
          </h1>
          <p class="eds-hero-description text-xl text-gray-700 dark:text-gray-300 mb-8">
            {{ description }}
          </p>
          {% if cta %}
          <div class="eds-hero-cta">
            <a href="{{ cta.url }}" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
              {{ cta.text }}
              <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 -mr-1 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
          {% endif %}
        </div>
      </section>

      <!-- Page Content -->
      <section class="py-12 px-6 md:px-10 lg:px-16">
        <div class="max-w-4xl mx-auto">
          <div class="prose prose-blue lg:prose-lg dark:prose-invert max-w-none">
            {{ content | safe }}
          </div>
          
          {% if categories %}
            <div class="mt-16">
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">Explore Our Documentation</h2>
              <div class="eds-stagger-list grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                {% for category in categories %}
                  <div class="eds-card bg-white dark:bg-gray-800 shadow rounded-lg p-6 hover:shadow-lg transition-shadow duration-300">
                    <div class="flex items-center mb-4">
                      <div class="bg-blue-100 dark:bg-blue-900 p-3 rounded-full text-blue-600 dark:text-blue-300">
                        {{ category.icon | safe }}
                      </div>
                      <h3 class="ml-4 text-lg font-medium text-gray-900 dark:text-white">{{ category.title }}</h3>
                    </div>
                    <p class="text-gray-600 dark:text-gray-300 mb-4">{{ category.description }}</p>
                    <a href="{{ category.url }}" class="text-blue-600 dark:text-blue-400 font-medium flex items-center hover:text-blue-800 dark:hover:text-blue-300">
                      Explore
                      <svg xmlns="http://www.w3.org/2000/svg" class="ml-1 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                      </svg>
                    </a>
                  </div>
                {% endfor %}
              </div>
            </div>
          {% endif %}
          
          {% if featuredComponents %}
            <div class="mt-16">
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">Featured Components</h2>
              <div class="eds-stagger-list grid gap-6 md:grid-cols-3">
                {% for component in featuredComponents %}
                  <div class="eds-card bg-white dark:bg-gray-800 shadow rounded-lg p-6 hover:shadow-lg transition-shadow duration-300">
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">{{ component.title }}</h3>
                    <p class="text-gray-600 dark:text-gray-300 mb-4">{{ component.description }}</p>
                    <a href="{{ component.url }}" class="text-blue-600 dark:text-blue-400 font-medium flex items-center hover:text-blue-800 dark:hover:text-blue-300">
                      View Component
                      <svg xmlns="http://www.w3.org/2000/svg" class="ml-1 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                      </svg>
                    </a>
                  </div>
                {% endfor %}
              </div>
            </div>
          {% endif %}
        </div>
      </section>
    </main>
  </div>

  <footer class="bg-white dark:bg-gray-800 shadow-inner py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="md:flex md:justify-between">
        <div class="mb-8 md:mb-0">
          <span class="text-lg font-bold text-blue-600 dark:text-blue-400">EDS</span>
          <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Enterprise Design System</p>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-500">Version 2.0.0</p>
        </div>
        <div class="grid grid-cols-2 gap-8 md:grid-cols-3">
          <div>
            <h3 class="text-sm font-semibold text-gray-700 dark:text-gray-300 uppercase tracking-wider">Resources</h3>
            <ul class="mt-4 space-y-4">
              <li><a href="/design-system/" class="text-base text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-300">Design System</a></li>
              <li><a href="/components/" class="text-base text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-300">Components</a></li>
              <li><a href="/resources/" class="text-base text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-300">Resources</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-sm font-semibold text-gray-700 dark:text-gray-300 uppercase tracking-wider">Help</h3>
            <ul class="mt-4 space-y-4">
              <li><a href="/getting-started/" class="text-base text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-300">Getting Started</a></li>
              <li><a href="/support/" class="text-base text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-300">Support</a></li>
              <li><a href="#" class="text-base text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-300">Contact</a></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-700">
        <p class="text-sm text-gray-500 dark:text-gray-400">
          &copy; {{ page.date.getFullYear() if page.date else "2025" }} Enterprise Design System. All rights reserved.
        </p>
      </div>
    </div>
  </footer>

  <script>
    // Mobile navigation toggle
    document.addEventListener('DOMContentLoaded', function() {
      const mobileNavToggle = document.getElementById('mobile-nav-toggle');
      const mobileNav = document.getElementById('mobile-nav');
      const mobileNavBackdrop = document.getElementById('mobile-nav-backdrop');
      
      if (mobileNavToggle && mobileNav && mobileNavBackdrop) {
        mobileNavToggle.addEventListener('click', function() {
          mobileNav.classList.toggle('hidden');
        });
        
        mobileNavBackdrop.addEventListener('click', function() {
          mobileNav.classList.add('hidden');
        });
      }
    });
  </script>
</body>
</html>