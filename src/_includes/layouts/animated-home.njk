---
layout: layouts/base.njk
---

<div class="relative overflow-hidden bg-gradient-to-b from-[var(--color-bg)] to-[var(--color-bg-alt)] pb-16">
  <!-- Hero Section with Animation -->
  <div class="container mx-auto px-4 pt-12 pb-24 md:pt-24 md:pb-32">
    <div class="text-center max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold mb-6 text-[var(--color-text)] hero-title" data-motion="fade-in">
        {{ title }}
      </h1>
      
      <p class="text-xl text-[var(--color-text-muted)] mb-8 max-w-2xl mx-auto hero-description" data-motion="fade-in-up">
        {{ description }}
      </p>
      
      {% if cta %}
      <div class="mt-10 hero-cta" data-motion="fade-in-up">
        <a href="{{ cta.url }}" class="eds-button eds-button-primary text-lg px-8 py-3 rounded-md animated-button">
          {{ cta.text }}
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 arrow-icon" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
      {% endif %}
    </div>
  </div>
  
  <!-- Animated Decoration SVG -->
  <div class="absolute bottom-0 left-0 right-0 h-16 md:h-24 overflow-hidden -mb-1 opacity-50">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320" class="absolute bottom-0 w-full h-auto fill-current text-[var(--color-bg)]">
      <path d="M0,192L60,197.3C120,203,240,213,360,202.7C480,192,600,160,720,154.7C840,149,960,171,1080,186.7C1200,203,1320,213,1380,218.7L1440,224L1440,320L1380,320C1320,320,1200,320,1080,320C960,320,840,320,720,320C600,320,480,320,360,320C240,320,120,320,60,320L0,320Z"></path>
    </svg>
  </div>
</div>

<!-- Categories Grid -->
{% if categories %}
<div class="container mx-auto px-4 py-12 md:py-16">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" data-motion="stagger-children">
    {% for category in categories %}
    <div class="feature-card rounded-lg p-6 border border-[var(--color-border)] bg-[var(--color-bg)]">
      <div class="flex items-center mb-4">
        <div class="w-12 h-12 flex items-center justify-center text-[var(--color-primary)] feature-card-icon">
          {{ category.icon | safe }}
        </div>
        <h2 class="text-xl font-bold ml-4">{{ category.title }}</h2>
      </div>
      <p class="text-[var(--color-text-muted)] mb-4">{{ category.description }}</p>
      <a href="{{ category.url }}" class="inline-flex items-center text-[var(--color-primary)] font-medium animated-link">
        Explore
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 arrow-icon" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
    {% endfor %}
  </div>
</div>
{% endif %}

<!-- Main Content -->
<div class="container mx-auto px-4 py-12">
  <div class="prose max-w-4xl mx-auto" data-motion="fade-in">
    {{ content | safe }}
  </div>
</div>

<!-- Featured Components -->
{% if featuredComponents %}
<div class="bg-[var(--color-bg-alt)] py-12 md:py-16">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Featured Components</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" data-motion="stagger-children" data-children-effect="scale-in">
      {% for component in featuredComponents %}
      <div class="component-card bg-[var(--color-bg)] rounded-lg overflow-hidden">
        <div class="p-6">
          <h3 class="component-card-title mb-2">{{ component.title }}</h3>
          <p class="component-card-description text-[var(--color-text-muted)]">{{ component.description }}</p>
        </div>
        <div class="component-card-footer px-6 pb-6 pt-2 flex justify-between items-center">
          <a href="{{ component.url }}" class="text-[var(--color-primary)] font-medium animated-link">
            View Component
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 inline arrow-icon" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
          {% if component.status %}
          <span class="component-badge {% if component.status == 'new' %}component-badge-new{% elif component.status == 'updated' %}component-badge-updated{% endif %}">
            {{ component.status }}
          </span>
          {% endif %}
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endif %}

<!-- Newsletter Section -->
<div class="container mx-auto px-4 py-16">
  <div class="bg-[var(--color-bg-alt)] rounded-xl p-8 md:p-12 max-w-4xl mx-auto" data-motion="fade-in">
    <div class="text-center mb-8">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">Stay Updated</h2>
      <p class="text-[var(--color-text-muted)] max-w-lg mx-auto">Get the latest updates, best practices, and insights about the Enterprise Design System delivered to your inbox.</p>
    </div>
    
    <form class="max-w-md mx-auto">
      <div class="flex flex-col sm:flex-row gap-3">
        <input type="email" placeholder="Enter your email" class="flex-1 px-4 py-3 rounded-md border border-[var(--color-border)] bg-[var(--color-bg)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)] animated-input">
        <button type="submit" class="eds-button eds-button-primary px-6 py-3 rounded-md animated-button">
          Subscribe
        </button>
      </div>
    </form>
  </div>
</div>