---
layout: layouts/base.njk
---

<div class="eds-animated-home">
  <!-- Hero section with Framer Motion animations -->
  <section class="eds-hero animate-fade-in">
    <div class="container mx-auto px-4 py-16 md:py-24">
      <h1 class="text-4xl md:text-6xl font-bold mb-6 animate-slide-up">{{ title }}</h1>
      <p class="text-xl md:text-2xl mb-8 max-w-3xl animate-slide-up-delay">{{ description }}</p>
      
      {% if cta %}
      <a href="{{ cta.url }}" class="eds-button eds-button--primary animate-fade-in-delay">
        {{ cta.text }}
      </a>
      {% endif %}
    </div>
  </section>

  <!-- Main content section -->
  <section class="eds-content">
    <div class="container mx-auto px-4 py-8 md:py-12">
      <div class="eds-content__inner">
        {{ content | safe }}
      </div>
    </div>
  </section>

  <!-- Categories section -->
  {% if categories %}
  <section class="eds-categories bg-gray-50 dark:bg-gray-800">
    <div class="container mx-auto px-4 py-16">
      <h2 class="text-3xl font-bold mb-12 text-center">Explore our documentation</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {% for category in categories %}
        <a href="{{ category.url }}" class="eds-category-card">
          <div class="eds-category-card__icon">
            {{ category.icon | safe }}
          </div>
          <h3 class="eds-category-card__title">{{ category.title }}</h3>
          <p class="eds-category-card__description">{{ category.description }}</p>
        </a>
        {% endfor %}
      </div>
    </div>
  </section>
  {% endif %}

  <!-- Featured components section -->
  {% if featuredComponents %}
  <section class="eds-featured">
    <div class="container mx-auto px-4 py-16">
      <h2 class="text-3xl font-bold mb-12 text-center">Featured Components</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {% for component in featuredComponents %}
        <a href="{{ component.url }}" class="eds-component-card">
          <h3 class="eds-component-card__title">{{ component.title }}</h3>
          <p class="eds-component-card__description">{{ component.description }}</p>
        </a>
        {% endfor %}
      </div>
    </div>
  </section>
  {% endif %}
</div>

<script src="/assets/js/framer-motion-wrapper.js"></script>
<script>
  // Initialize animations when the page loads
  document.addEventListener('DOMContentLoaded', () => {
    // Apply Framer Motion-like animations
    const animateElements = document.querySelectorAll('.animate-fade-in, .animate-slide-up, .animate-slide-up-delay, .animate-fade-in-delay');
    
    animateElements.forEach(element => {
      element.style.opacity = '1';
      
      if (element.classList.contains('animate-slide-up') || 
          element.classList.contains('animate-slide-up-delay')) {
        element.style.transform = 'translateY(0)';
      }
    });
  });
</script>