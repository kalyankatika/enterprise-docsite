---
layout: layouts/base.njk
---

<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col md:flex-row">
    {% if sidebarType === "design-system" %}
      <aside class="w-full md:w-64 lg:w-72 shrink-0 mb-8 md:mb-0 md:mr-8">
        <div class="sticky top-24">
          <nav class="space-y-6">
            {% for section in navigation.designSystem %}
              <div>
                <h4 class="text-lg font-semibold mb-3">{{ section.title }}</h4>
                <ul class="space-y-2">
                  {% for item in section.items %}
                    <li>
                      <a href="{{ item.url }}" class="{% if page.url === item.url %}text-[var(--color-primary)] font-medium{% else %}text-[var(--color-text-muted)] hover:text-[var(--color-text)]{% endif %} transition-colors duration-200">
                        {{ item.title }}
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              </div>
            {% endfor %}
          </nav>
        </div>
      </aside>
    {% elif sidebarType === "components" %}
      <aside class="w-full md:w-64 lg:w-72 shrink-0 mb-8 md:mb-0 md:mr-8">
        <div class="sticky top-24">
          <nav class="space-y-6">
            {% for section in navigation.components %}
              <div>
                <h4 class="text-lg font-semibold mb-3">{{ section.title }}</h4>
                <ul class="space-y-2">
                  {% for item in section.items %}
                    <li>
                      <a href="{{ item.url }}" class="{% if page.url === item.url %}text-[var(--color-primary)] font-medium{% else %}text-[var(--color-text-muted)] hover:text-[var(--color-text)]{% endif %} transition-colors duration-200">
                        {{ item.title }}
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              </div>
            {% endfor %}
          </nav>
        </div>
      </aside>
    {% endif %}
    <div class="flex-1">
      <header class="mb-8">
        <h1 class="text-3xl font-bold mb-4">{{ title }}</h1>
        {% if description %}
          <p class="text-lg text-[var(--color-text-muted)]">{{ description }}</p>
        {% endif %}
      </header>
      <div class="prose prose-lg max-w-none">
        {{ content | safe }}
      </div>
    </div>
  </div>
</div>