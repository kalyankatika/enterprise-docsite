---
layout: layouts/base.njk
---

<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <h1 class="text-3xl font-bold mb-4">{{ title }}</h1>
    {% if description %}
      <p class="text-lg text-[var(--color-text-muted)] mb-8">{{ description }}</p>
    {% endif %}
    
    {% if breadcrumbs %}
      <nav class="eds-breadcrumbs mb-6" aria-label="Breadcrumbs">
        <ol class="flex items-center space-x-2 text-sm">
          <li>
            <a href="/" class="text-[var(--color-primary)] hover:underline">Home</a>
            <span class="mx-2 text-[var(--color-text-muted)]">/</span>
          </li>
          {% for crumb in breadcrumbs %}
            <li>
              {% if not loop.last %}
                <a href="{{ crumb.url }}" class="text-[var(--color-primary)] hover:underline">{{ crumb.label }}</a>
                <span class="mx-2 text-[var(--color-text-muted)]">/</span>
              {% else %}
                <span class="text-[var(--color-text-muted)]">{{ crumb.label }}</span>
              {% endif %}
            </li>
          {% endfor %}
        </ol>
      </nav>
    {% endif %}
  </div>

  <div class="prose dark:prose-invert max-w-none">
    {{ content | safe }}
  </div>
</div>