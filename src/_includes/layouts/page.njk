---
layout: layouts/base.njk
---

<div class="eds-page">
  {% if title %}
    <div class="mb-8">
      <h1 class="text-3xl md:text-4xl font-bold mb-4">{{ title }}</h1>
      {% if description %}
        <p class="text-xl text-gray-600 dark:text-gray-300">{{ description }}</p>
      {% endif %}
    </div>
    <hr class="border-gray-200 dark:border-gray-700 mb-8">
  {% endif %}

  {% if showTableOfContents %}
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <div class="lg:col-span-3">
        {{ content | safe }}
      </div>
      <div class="order-first lg:order-last">
        <div class="sticky top-24">
          <h2 class="text-lg font-semibold mb-4">On this page</h2>
          <nav class="eds-table-of-contents">
            {% set headings = collections.all | getHeadings(page.url) %}
            <ul class="space-y-2 text-sm">
              {% for heading in headings %}
                <li>
                  <a href="#{{ heading.id }}" class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400">
                    {{ heading.text }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </nav>
        </div>
      </div>
    </div>
  {% else %}
    {{ content | safe }}
  {% endif %}

  {% if showPagination %}
    <div class="mt-12 pt-6 border-t border-gray-200 dark:border-gray-700">
      <div class="flex flex-col sm:flex-row items-center justify-between">
        {% if pagination.previous %}
          <a href="{{ pagination.previous.url }}" class="eds-link flex items-center mb-4 sm:mb-0">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            {{ pagination.previous.title }}
          </a>
        {% else %}
          <div></div>
        {% endif %}

        {% if pagination.next %}
          <a href="{{ pagination.next.url }}" class="eds-link flex items-center">
            {{ pagination.next.title }}
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
        {% else %}
          <div></div>
        {% endif %}
      </div>
    </div>
  {% endif %}
</div>