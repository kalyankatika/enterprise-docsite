---
layout: layouts/base.njk
---

<div class="container mx-auto px-4 md:px-6 pt-8 pb-16">
  <div class="flex flex-col lg:flex-row">
    <!-- Sidebar -->
    <aside class="w-full lg:w-64 pr-0 lg:pr-8 mb-8 lg:mb-0 lg:border-r border-[var(--color-border)]">
      {% if sidebarType === 'components' %}
        {% include "partials/sidebar-components.njk" %}
      {% elif sidebarType === 'foundations' %}
        {% include "partials/sidebar-foundations.njk" %}
      {% elif sidebarType === 'guidelines' %}
        {% include "partials/sidebar-guidelines.njk" %}
      {% else %}
        {% include "partials/sidebar-default.njk" %}
      {% endif %}
    </aside>
    
    <!-- Main content -->
    <main class="w-full lg:flex-1 lg:pl-8">
      <div class="mb-8">
        <h1 class="text-3xl md:text-4xl font-bold mb-4">{{ title }}</h1>
        {% if description %}
          <p class="text-xl text-gray-600 dark:text-gray-300">{{ description }}</p>
        {% endif %}
      </div>
      <hr class="border-gray-200 dark:border-gray-700 mb-8">
      
      {{ content | safe }}
    </main>
  </div>
</div>