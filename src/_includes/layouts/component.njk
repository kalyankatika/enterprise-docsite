---
layout: layouts/base.njk
sidebarType: components
---

{% set componentData = components[componentId] %}

<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col md:flex-row">
    <aside class="w-full md:w-64 lg:w-72 shrink-0 mb-8 md:mb-0 md:mr-8">
      <div class="sticky top-24">
        <nav class="space-y-6">
          {% for section in navigation.components %}
            <div>
              <h4 class="text-lg font-semibold mb-3">{{ section.title }}</h4>
              <ul class="space-y-2">
                {% for item in section.items %}
                  <li>
                    <a href="{{ item.url }}" class="{% if page.url === item.url %}text-[var(--color-primary)] font-medium{% else %}text-[var(--color-text-muted)] hover:text-[var(--color-text)]{% endif %} transition-colors duration-200">
                      {{ item.title }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            </div>
          {% endfor %}
        </nav>
      </div>
    </aside>
    <div class="flex-1">
      <header class="mb-8">
        <div class="flex flex-wrap items-center gap-3 mb-2">
          <h1 class="text-3xl font-bold">{{ title }}</h1>
          {% if componentData.status === "stable" %}
            <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded">Stable</span>
          {% elif componentData.status === "beta" %}
            <span class="px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded">Beta</span>
          {% elif componentData.status === "alpha" %}
            <span class="px-2 py-1 text-xs font-medium bg-orange-100 text-orange-800 rounded">Alpha</span>
          {% elif componentData.status === "deprecated" %}
            <span class="px-2 py-1 text-xs font-medium bg-red-100 text-red-800 rounded">Deprecated</span>
          {% endif %}
        </div>
        {% if description %}
          <p class="text-lg text-[var(--color-text-muted)]">{{ description }}</p>
        {% endif %}
        {% if componentData %}
          <div class="mt-4 text-sm text-[var(--color-text-muted)]">
            <p>Last updated: {{ componentData.lastUpdated }}</p>
          </div>
        {% endif %}
      </header>
      
      <div class="mb-8">
        <nav class="flex border-b border-[var(--color-border)]">
          <button class="tab-button py-3 px-4 border-b-2 border-[var(--color-primary)] font-medium text-[var(--color-primary)]" data-tab="usage">
            Usage
          </button>
          <button class="tab-button py-3 px-4 border-b-2 border-transparent hover:text-[var(--color-text)] font-medium text-[var(--color-text-muted)]" data-tab="props">
            Properties
          </button>
          <button class="tab-button py-3 px-4 border-b-2 border-transparent hover:text-[var(--color-text)] font-medium text-[var(--color-text-muted)]" data-tab="examples">
            Examples
          </button>
          <button class="tab-button py-3 px-4 border-b-2 border-transparent hover:text-[var(--color-text)] font-medium text-[var(--color-text-muted)]" data-tab="accessibility">
            Accessibility
          </button>
        </nav>
        
        <div class="tab-content" id="usage">
          <div class="pt-6 prose prose-lg max-w-none">
            <div class="not-prose mb-8 p-6 bg-[var(--color-bg-alt)] rounded-lg border border-[var(--color-border)]">
              <div class="component-preview">
                {% block componentPreview %}
                  <!-- Component preview will be inserted here -->
                {% endblock %}
              </div>
            </div>
            {% block usage %}
              <!-- Usage content will be inserted here -->
              {{ content | safe }}
            {% endblock %}
          </div>
        </div>
        
        <div class="tab-content hidden" id="props">
          <div class="pt-6 prose prose-lg max-w-none">
            {% block props %}
              <!-- Properties content will be inserted here -->
              <h2>Properties</h2>
              <p>This section documents the properties and options available for this component.</p>
              {% if componentProps %}
                <div class="not-prose overflow-x-auto">
                  <table class="w-full border-collapse">
                    <thead>
                      <tr class="bg-[var(--color-bg-alt)]">
                        <th class="px-4 py-2 text-left border border-[var(--color-border)]">Name</th>
                        <th class="px-4 py-2 text-left border border-[var(--color-border)]">Type</th>
                        <th class="px-4 py-2 text-left border border-[var(--color-border)]">Default</th>
                        <th class="px-4 py-2 text-left border border-[var(--color-border)]">Description</th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for prop in componentProps %}
                        <tr>
                          <td class="px-4 py-2 border border-[var(--color-border)] font-mono text-sm">{{ prop.name }}</td>
                          <td class="px-4 py-2 border border-[var(--color-border)] font-mono text-sm">{{ prop.type }}</td>
                          <td class="px-4 py-2 border border-[var(--color-border)] font-mono text-sm">{{ prop.default }}</td>
                          <td class="px-4 py-2 border border-[var(--color-border)]">{{ prop.description }}</td>
                        </tr>
                      {% endfor %}
                    </tbody>
                  </table>
                </div>
              {% endif %}
            {% endblock %}
          </div>
        </div>
        
        <div class="tab-content hidden" id="examples">
          <div class="pt-6 prose prose-lg max-w-none">
            {% block examples %}
              <!-- Examples content will be inserted here -->
              <h2>Examples</h2>
              <p>Explore various examples and use cases for this component.</p>
            {% endblock %}
          </div>
        </div>
        
        <div class="tab-content hidden" id="accessibility">
          <div class="pt-6 prose prose-lg max-w-none">
            {% block accessibility %}
              <!-- Accessibility content will be inserted here -->
              <h2>Accessibility</h2>
              <p>This section provides accessibility guidelines and best practices for this component.</p>
            {% endblock %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% block scripts %}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabButtons = document.querySelectorAll('.tab-button');
    const tabContents = document.querySelectorAll('.tab-content');
    
    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Get the tab to activate
        const tabToActivate = button.dataset.tab;
        
        // Reset all buttons and tabs
        tabButtons.forEach(btn => {
          btn.classList.remove('border-[var(--color-primary)]', 'text-[var(--color-primary)]');
          btn.classList.add('border-transparent', 'text-[var(--color-text-muted)]');
        });
        
        tabContents.forEach(content => {
          content.classList.add('hidden');
        });
        
        // Activate the clicked tab and its content
        button.classList.remove('border-transparent', 'text-[var(--color-text-muted)]');
        button.classList.add('border-[var(--color-primary)]', 'text-[var(--color-primary)]');
        
        document.getElementById(tabToActivate).classList.remove('hidden');
      });
    });
  });
</script>
{% endblock %}