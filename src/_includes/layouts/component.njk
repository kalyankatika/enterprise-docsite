---
layout: layouts/base.njk
sidebarType: components
---

<article class="max-w-5xl mx-auto">
  <header class="mb-10">
    <div class="flex items-center gap-2 text-sm text-[var(--color-text-muted)] mb-2">
      <a href="/components/" class="hover:text-[var(--color-primary)]">Components</a>
      <span>/</span>
      <a href="/components/{{ componentType }}/" class="hover:text-[var(--color-primary)]">{{ componentCategory }}</a>
    </div>
    
    <h1 class="text-3xl font-bold mb-2">{{ title }}</h1>
    
    {% if description %}
      <p class="text-lg text-[var(--color-text-muted)] mb-6">{{ description }}</p>
    {% endif %}
    
    {% if componentStatus %}
      <div class="flex gap-4 mb-6">
        <div class="flex items-center">
          <span class="text-sm font-medium mr-2">Status:</span>
          <span class="eds-badge eds-badge-{{ componentStatus | lower }}">{{ componentStatus }}</span>
        </div>
        
        {% if componentVersion %}
          <div class="flex items-center">
            <span class="text-sm font-medium mr-2">Version:</span>
            <span class="text-sm">{{ componentVersion }}</span>
          </div>
        {% endif %}
      </div>
    {% endif %}
  </header>

  <div class="eds-component-tabs" x-data="{ activeTab: 'overview' }">
    <div class="border-b border-[var(--color-border)] mb-6">
      <nav class="flex space-x-8" aria-label="Component Documentation Tabs">
        <button 
          @click="activeTab = 'overview'" 
          :class="{'text-[var(--color-primary)] border-b-2 border-[var(--color-primary)]': activeTab === 'overview', 'text-[var(--color-text-muted)]': activeTab !== 'overview'}"
          class="py-4 px-1 font-medium text-sm focus:outline-none">
          Overview
        </button>
        <button 
          @click="activeTab = 'code'" 
          :class="{'text-[var(--color-primary)] border-b-2 border-[var(--color-primary)]': activeTab === 'code', 'text-[var(--color-text-muted)]': activeTab !== 'code'}"
          class="py-4 px-1 font-medium text-sm focus:outline-none">
          Code
        </button>
        <button 
          @click="activeTab = 'usage'" 
          :class="{'text-[var(--color-primary)] border-b-2 border-[var(--color-primary)]': activeTab === 'usage', 'text-[var(--color-text-muted)]': activeTab !== 'usage'}"
          class="py-4 px-1 font-medium text-sm focus:outline-none">
          Usage Guidelines
        </button>
        <button 
          @click="activeTab = 'accessibility'" 
          :class="{'text-[var(--color-primary)] border-b-2 border-[var(--color-primary)]': activeTab === 'accessibility', 'text-[var(--color-text-muted)]': activeTab !== 'accessibility'}"
          class="py-4 px-1 font-medium text-sm focus:outline-none">
          Accessibility
        </button>
      </nav>
    </div>

    <div x-show="activeTab === 'overview'" class="prose dark:prose-invert max-w-none">
      {% if overview %}
        {{ overview | safe }}
      {% else %}
        {{ content | safe }}
      {% endif %}
    </div>

    <div x-show="activeTab === 'code'" x-cloak class="prose dark:prose-invert max-w-none">
      {% if code %}
        {{ code | safe }}
      {% else %}
        <div class="eds-empty-state">
          <h2>Code Examples</h2>
          <p>Code examples for this component are coming soon.</p>
        </div>
      {% endif %}
    </div>

    <div x-show="activeTab === 'usage'" x-cloak class="prose dark:prose-invert max-w-none">
      {% if usage %}
        {{ usage | safe }}
      {% else %}
        <div class="eds-empty-state">
          <h2>Usage Guidelines</h2>
          <p>Usage guidelines for this component are coming soon.</p>
        </div>
      {% endif %}
    </div>

    <div x-show="activeTab === 'accessibility'" x-cloak class="prose dark:prose-invert max-w-none">
      {% if accessibility %}
        {{ accessibility | safe }}
      {% else %}
        <div class="eds-empty-state">
          <h2>Accessibility</h2>
          <p>Accessibility information for this component is coming soon.</p>
        </div>
      {% endif %}
    </div>
  </div>
</article>