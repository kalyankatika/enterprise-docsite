---
layout: layouts/with-sidebar.njk
---

<!-- Main content area -->
<div>
  <div class="w-full">
      <div class="prose max-w-none">
        <!-- Breadcrumb -->
        <nav class="text-sm text-[var(--color-text-muted)] mb-4" aria-label="Breadcrumb">
          <ol class="flex flex-wrap items-center">
            <li class="flex items-center">
              <a href="/" class="hover:text-[var(--color-primary)] transition-colors">Home</a>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mx-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </li>
            <li class="flex items-center">
              <a href="/components/" class="hover:text-[var(--color-primary)] transition-colors">Components</a>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mx-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </li>
            {% if category %}
            <li class="flex items-center">
              <a href="/components/{{ category }}/" class="hover:text-[var(--color-primary)] transition-colors capitalize">{{ category }}</a>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mx-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </li>
            {% endif %}
            <li>
              <span class="font-medium">{{ title }}</span>
            </li>
          </ol>
        </nav>
        
        <!-- Component header -->
        <h1>{{ title }}</h1>
        {% if description %}
          <p class="text-xl text-[var(--color-text-muted)] mb-8">{{ description }}</p>
        {% endif %}

        <!-- Component metadata -->
        <div class="flex flex-wrap items-center gap-3 mb-8">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-[var(--color-primary-light)] text-[var(--color-primary-dark)]">
            v{{ version | default('1.0.0') }}
          </span>
          
          <a href="https://github.com/enterprise-design-system/components/tree/main/src/{{ title | lower }}" class="inline-flex items-center text-sm text-[var(--color-text-muted)] hover:text-[var(--color-primary)] transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            View on GitHub
          </a>
        </div>
        
        <!-- Component content tabs -->
        <div class="mb-8 border-b border-[var(--color-border)]">
          <nav class="flex flex-wrap -mb-px" role="tablist" aria-label="Component documentation sections">
            <a href="{{ page.url | replace('/index.html', '/') | replace('//index.html', '/') }}" 
              class="tab-link mr-6 py-3 border-b-2 font-medium {% if not page.url.includes('/code/') and not page.url.includes('/accessibility/') and not page.url.includes('/examples/') %}text-[var(--color-primary)] border-[var(--color-primary)]{% else %}text-[var(--color-text-muted)] border-transparent hover:text-[var(--color-primary)]{% endif %} transition-colors"
              role="tab" 
              aria-selected="{% if not page.url.includes('/code/') and not page.url.includes('/accessibility/') and not page.url.includes('/examples/') %}true{% else %}false{% endif %}"
              tabindex="{% if not page.url.includes('/code/') and not page.url.includes('/accessibility/') and not page.url.includes('/examples/') %}0{% else %}-1{% endif %}">
              Design
            </a>
            
            <a href="{{ page.url | replace('/index.html', '') | replace('/code/', '/') | replace('/accessibility/', '/') | replace('/examples/', '/') }}{% if not page.url.endsWith('/') %}/{% endif %}code/" 
              class="tab-link mr-6 py-3 border-b-2 font-medium {% if page.url.includes('/code/') %}text-[var(--color-primary)] border-[var(--color-primary)]{% else %}text-[var(--color-text-muted)] border-transparent hover:text-[var(--color-primary)]{% endif %} transition-colors"
              role="tab" 
              aria-selected="{% if page.url.includes('/code/') %}true{% else %}false{% endif %}"
              tabindex="{% if page.url.includes('/code/') %}0{% else %}-1{% endif %}">
              Code
            </a>
            
            <a href="{{ page.url | replace('/index.html', '') | replace('/code/', '/') | replace('/accessibility/', '/') | replace('/examples/', '/') }}{% if not page.url.endsWith('/') %}/{% endif %}accessibility/" 
              class="tab-link mr-6 py-3 border-b-2 font-medium {% if page.url.includes('/accessibility/') %}text-[var(--color-primary)] border-[var(--color-primary)]{% else %}text-[var(--color-text-muted)] border-transparent hover:text-[var(--color-primary)]{% endif %} transition-colors"
              role="tab" 
              aria-selected="{% if page.url.includes('/accessibility/') %}true{% else %}false{% endif %}"
              tabindex="{% if page.url.includes('/accessibility/') %}0{% else %}-1{% endif %}">
              Accessibility
            </a>
            
            <a href="{{ page.url | replace('/index.html', '') | replace('/code/', '/') | replace('/accessibility/', '/') | replace('/examples/', '/') }}{% if not page.url.endsWith('/') %}/{% endif %}examples/" 
              class="tab-link py-3 border-b-2 font-medium {% if page.url.includes('/examples/') %}text-[var(--color-primary)] border-[var(--color-primary)]{% else %}text-[var(--color-text-muted)] border-transparent hover:text-[var(--color-primary)]{% endif %} transition-colors"
              role="tab" 
              aria-selected="{% if page.url.includes('/examples/') %}true{% else %}false{% endif %}"
              tabindex="{% if page.url.includes('/examples/') %}0{% else %}-1{% endif %}">
              Examples
            </a>
          </nav>
        </div>
        
        <!-- Component content -->
        {{ content | safe }}
      </div>
    </div>
    
    <!-- Right sidebar - Table of Contents -->
    <div class="hidden lg:block w-64 pl-8 flex-shrink-0">
      <div class="sticky top-32">
        <h3 class="text-sm font-medium text-[var(--color-text-muted)] uppercase tracking-wider mb-4">On this page</h3>
        <nav class="toc">
          <ul class="space-y-2 border-l border-[var(--color-border)]">
            <li>
              <a href="#anatomy" class="block pl-3 text-sm hover:text-[var(--color-primary)] transition-colors">
                Anatomy
              </a>
            </li>
            <li>
              <a href="#considerations" class="block pl-3 text-sm hover:text-[var(--color-primary)] transition-colors">
                Considerations
              </a>
            </li>
            <li>
              <a href="#usage" class="block pl-3 text-sm hover:text-[var(--color-primary)] transition-colors">
                Usage
              </a>
            </li>
            <li>
              <a href="#behavior" class="block pl-3 text-sm hover:text-[var(--color-primary)] transition-colors">
                Behavior
              </a>
            </li>
            <li>
              <a href="#best-practices" class="block pl-3 text-sm hover:text-[var(--color-primary)] transition-colors">
                Best Practices
              </a>
            </li>
            <li>
              <a href="#specifications" class="block pl-3 text-sm hover:text-[var(--color-primary)] transition-colors">
                Specifications
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>