---
layout: layouts/base.njk
---

<div class="eds-component-page">
  <div class="mb-8">
    <div class="flex flex-wrap items-center justify-between mb-2">
      <h1 class="text-3xl md:text-4xl font-bold mr-4">{{ title }}</h1>
      {% if status %}
        <span class="eds-status-badge eds-status-badge--{{ status | lower }} px-3 py-1 text-sm font-medium rounded-full">{{ status }}</span>
      {% endif %}
    </div>
    {% if description %}
      <p class="text-xl text-gray-600 dark:text-gray-300">{{ description }}</p>
    {% endif %}
    
    <div class="flex flex-wrap items-center text-sm text-gray-500 dark:text-gray-400 mt-4 space-x-6">
      {% if version %}
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
          </svg>
          <span>Version {{ version }}</span>
        </div>
      {% endif %}
      
      {% if lastUpdated %}
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span>Updated {{ lastUpdated }}</span>
        </div>
      {% endif %}
    </div>
  </div>
  
  <hr class="border-gray-200 dark:border-gray-700 mb-8">
  
  <div class="eds-component-content" x-data="{ activeTab: '{{ tabs[0].name }}' }">
    {% if tabs %}
      <div class="eds-tabs mb-8">
        <div class="flex border-b border-gray-200 dark:border-gray-700 overflow-x-auto">
          {% for tab in tabs %}
            <button 
              class="px-4 py-2 text-sm font-medium -mb-px border-b-2 whitespace-nowrap"
              :class="activeTab === '{{ tab.name }}' ? 'border-primary-500 text-primary-600 dark:text-primary-400' : 'border-transparent text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300'"
              @click="activeTab = '{{ tab.name }}'"
              role="tab"
              aria-selected="activeTab === '{{ tab.name }}'"
              id="{{ tab.name }}-tab"
              aria-controls="{{ tab.name }}-panel"
            >
              {{ tab.label }}
            </button>
          {% endfor %}
        </div>
      </div>
      
      <div class="eds-tab-panels">
        {% for tab in tabs %}
          <div 
            x-show="activeTab === '{{ tab.name }}'"
            id="{{ tab.name }}-panel"
            role="tabpanel"
            aria-labelledby="{{ tab.name }}-tab"
            x-cloak
          >
            {% if tab.name === 'usage' %}
              {{ usageContent | safe }}
            {% elif tab.name === 'code' %}
              {{ codeContent | safe }}
            {% elif tab.name === 'accessibility' %}
              {{ accessibilityContent | safe }}
            {% elif tab.name === 'specs' %}
              {{ specsContent | safe }}
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% else %}
      {{ content | safe }}
    {% endif %}
  </div>
  
  <div class="mt-12 pt-6 border-t border-gray-200 dark:border-gray-700">
    <div class="flex flex-wrap items-center justify-between">
      <div class="w-full sm:w-auto mb-4 sm:mb-0">
        <a href="https://github.com/enterprise/design-system/tree/main/packages/components/src/{{ title | lower }}" class="eds-link flex items-center text-sm" target="_blank" rel="noopener">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
          </svg>
          View Source on GitHub
        </a>
      </div>
      
      <div class="w-full sm:w-auto">
        <a href="https://github.com/enterprise/design-system/issues/new?title=Component: {{ title }}" class="eds-link flex items-center text-sm" target="_blank" rel="noopener">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          Report an Issue
        </a>
      </div>
    </div>
  </div>
</div>