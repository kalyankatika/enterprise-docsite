                <li><a href="/components/navigation/breadcrumb/" class="block py-1 hover:text-[var(--color-primary)] transition-colors {% if page.url == '/components/navigation/breadcrumb/' %}text-[var(--color-primary)] font-medium{% endif %}">Breadcrumb</a></li>
                <li><a href="/components/navigation/tabs/" class="block py-1 hover:text-[var(--color-primary)] transition-colors {% if page.url == '/components/navigation/tabs/' %}text-[var(--color-primary)] font-medium{% endif %}">Tabs</a></li>
