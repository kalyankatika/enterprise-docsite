---
layout: layouts/base.njk
---

<div class="eds-container">
  <div class="eds-component">
    <header class="eds-component__header">
      <div class="eds-component__meta">
        <div class="eds-status-badge eds-status-badge--{{ status | lower }}">{{ status }}</div>
        <div class="eds-component__version">Since v{{ since }}</div>
        <div class="eds-component__updated">Updated: {{ lastUpdated }}</div>
      </div>
      
      <h1 class="eds-component__title">{{ title }}</h1>
      <p class="eds-component__description">{{ description }}</p>
      
      {% if githubUrl %}
      <a href="{{ githubUrl }}" class="eds-component__github" target="_blank" rel="noopener">View on GitHub</a>
      {% endif %}
    </header>

    <div class="eds-component__tabs" x-data="{ activeTab: 'documentation' }">
      <div class="eds-tabs">
        <div class="eds-tabs__list" role="tablist">
          <button class="eds-tabs__tab" 
                  :class="{ 'eds-tabs__tab--active': activeTab === 'documentation' }" 
                  @click="activeTab = 'documentation'" 
                  role="tab" 
                  aria-selected="activeTab === 'documentation'" 
                  aria-controls="documentation">
            Documentation
          </button>
          <button class="eds-tabs__tab" 
                  :class="{ 'eds-tabs__tab--active': activeTab === 'examples' }" 
                  @click="activeTab = 'examples'" 
                  role="tab" 
                  aria-selected="activeTab === 'examples'" 
                  aria-controls="examples">
            Examples
          </button>
          <button class="eds-tabs__tab" 
                  :class="{ 'eds-tabs__tab--active': activeTab === 'code' }" 
                  @click="activeTab = 'code'" 
                  role="tab" 
                  aria-selected="activeTab === 'code'" 
                  aria-controls="code">
            Code
          </button>
          <button class="eds-tabs__tab" 
                  :class="{ 'eds-tabs__tab--active': activeTab === 'usage' }" 
                  @click="activeTab = 'usage'" 
                  role="tab" 
                  aria-selected="activeTab === 'usage'" 
                  aria-controls="usage">
            Usage
          </button>
        </div>
        
        <div class="eds-tabs__panels">
          <div class="eds-tabs__panel" 
               :class="{ 'eds-tabs__panel--active': activeTab === 'documentation' }" 
               role="tabpanel" 
               id="documentation">
            <div class="eds-component__content">
              {{ content | safe }}
            </div>

            {% if contributors %}
            <div class="eds-component__contributors">
              <h3 class="eds-component__contributors-title">Contributors</h3>
              <ul class="eds-component__contributors-list">
                {% for contributor in contributors %}
                <li class="eds-component__contributor">{{ contributor }}</li>
                {% endfor %}
              </ul>
            </div>
            {% endif %}
          </div>
          
          <div class="eds-tabs__panel" 
               :class="{ 'eds-tabs__panel--active': activeTab === 'examples' }" 
               role="tabpanel" 
               id="examples">
            <div class="eds-component__examples">
              <p>Component examples coming soon...</p>
            </div>
          </div>
          
          <div class="eds-tabs__panel" 
               :class="{ 'eds-tabs__panel--active': activeTab === 'code' }" 
               role="tabpanel" 
               id="code">
            <div class="eds-component__code">
              <p>Component code examples coming soon...</p>
            </div>
          </div>
          
          <div class="eds-tabs__panel" 
               :class="{ 'eds-tabs__panel--active': activeTab === 'usage' }" 
               role="tabpanel" 
               id="usage">
            <div class="eds-component__usage">
              <p>Component usage statistics coming soon...</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>