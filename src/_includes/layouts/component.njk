                <li><a href="/components/inputs/radio/" class="block py-1 hover:text-[var(--color-primary)] transition-colors {% if page.url == '/components/inputs/radio/' %}text-[var(--color-primary)] font-medium{% endif %}">Radio</a></li>
                <li><a href="/components/inputs/select/" class="block py-1 hover:text-[var(--color-primary)] transition-colors {% if page.url == '/components/inputs/select/' %}text-[var(--color-primary)] font-medium{% endif %}">Select</a></li>
              </ul>
              {% endif %}
            </li>
            <li>
              <a href="/components/layout/" class="block py-1 hover:text-[var(--color-primary)] transition-colors {% if page.url.includes('/components/layout/') %}text-[var(--color-primary)] font-medium{% endif %}">
                Layout Components
              </a>
              {% if page.url.includes('/components/layout/') %}
