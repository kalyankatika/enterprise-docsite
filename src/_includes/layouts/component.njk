                <li><a href="/components/layout/card/" class="block py-1 hover:text-[var(--color-primary)] transition-colors {% if page.url == '/components/layout/card/' %}text-[var(--color-primary)] font-medium{% endif %}">Card</a></li>
                <li><a href="/components/layout/accordion/" class="block py-1 hover:text-[var(--color-primary)] transition-colors {% if page.url == '/components/layout/accordion/' %}text-[var(--color-primary)] font-medium{% endif %}">Accordion</a></li>
                <li><a href="/components/layout/modal/" class="block py-1 hover:text-[var(--color-primary)] transition-colors {% if page.url == '/components/layout/modal/' %}text-[var(--color-primary)] font-medium{% endif %}">Modal</a></li>
                <li><a href="/components/layout/grid/" class="block py-1 hover:text-[var(--color-primary)] transition-colors {% if page.url == '/components/layout/grid/' %}text-[var(--color-primary)] font-medium{% endif %}">Grid</a></li>
              </ul>
