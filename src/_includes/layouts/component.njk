---
layout: base
---

<div class="component-header mb-8">
  <h1>{{ title }}</h1>
  {% if description %}
    <p class="text-[var(--color-text-muted)] text-lg mt-2">{{ description }}</p>
  {% endif %}
  
  <nav class="breadcrumbs mt-4 text-sm text-[var(--color-text-muted)]" aria-label="Breadcrumbs">
    <ol class="flex flex-wrap items-center">
      <li><a href="/" class="hover:text-[var(--color-primary)]">Home</a></li>
      <li class="flex items-center">
        <svg class="h-4 w-4 mx-2" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <a href="/components/" class="hover:text-[var(--color-primary)]">Components</a>
      </li>
      <li class="flex items-center">
        <svg class="h-4 w-4 mx-2" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span>{{ title }}</span>
      </li>
    </ol>
  </nav>
  
  {% if tags and tags.length > 0 %}
    <div class="mt-4 flex flex-wrap gap-2">
      {% for tag in tags %}
        <span class="eds-tag">{{ tag }}</span>
      {% endfor %}
    </div>
  {% endif %}
</div>

<div class="component-layout">
  <div class="component-tabs" x-data="{ activeTab: 'usage' }">
    <div class="tabs-header border-b border-[var(--color-border)] mb-6">
      <div class="flex -mb-px">
        <button 
          @click="activeTab = 'usage'" 
          :class="{ 'border-[var(--color-primary)] text-[var(--color-primary)]': activeTab === 'usage' }"
          class="px-4 py-2 border-b-2 border-transparent font-medium text-sm">
          Usage
        </button>
        <button 
          @click="activeTab = 'code'" 
          :class="{ 'border-[var(--color-primary)] text-[var(--color-primary)]': activeTab === 'code' }"
          class="px-4 py-2 border-b-2 border-transparent font-medium text-sm">
          Code
        </button>
        <button 
          @click="activeTab = 'props'" 
          :class="{ 'border-[var(--color-primary)] text-[var(--color-primary)]': activeTab === 'props' }"
          class="px-4 py-2 border-b-2 border-transparent font-medium text-sm">
          Props
        </button>
        <button 
          @click="activeTab = 'examples'" 
          :class="{ 'border-[var(--color-primary)] text-[var(--color-primary)]': activeTab === 'examples' }"
          class="px-4 py-2 border-b-2 border-transparent font-medium text-sm">
          Examples
        </button>
      </div>
    </div>
    
    <div class="tab-content">
      <div x-show="activeTab === 'usage'" class="animate-fade-in">
        <div class="mb-8">
          <div class="bg-[var(--color-bg-alt)] border border-[var(--color-border)] rounded-lg p-6 mb-6">
            <div class="component-preview">
              {% if component.previewTemplate %}
                {% include component.previewTemplate %}
              {% else %}
                <div class="text-center text-[var(--color-text-muted)]">
                  Preview not available
                </div>
              {% endif %}
            </div>
          </div>
          
          <div class="flex justify-end">
            <button class="eds-btn eds-btn-secondary text-sm">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
              </svg>
              Reset Example
            </button>
          </div>
        </div>
        
        <div class="usage-content">
          {{ content | safe }}
        </div>
      </div>
      
      <div x-show="activeTab === 'code'" class="animate-fade-in" x-cloak>
        <div class="mb-6">
          <div class="flex justify-between items-center mb-2">
            <h3 class="text-lg font-medium">Component Code</h3>
            <button class="eds-btn eds-btn-secondary text-sm">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                <path d="M8 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" />
                <path d="M6 3a2 2 0 00-2 2v11a2 2 0 002 2h8a2 2 0 002-2V5a2 2 0 00-2-2 3 3 0 01-3 3H9a3 3 0 01-3-3z" />
              </svg>
              Copy Code
            </button>
          </div>
          
          <div class="bg-[var(--color-bg-alt)] rounded-lg overflow-hidden">
            <pre class="language-html"><code>{{ component.code | safe }}</code></pre>
          </div>
        </div>
        
        <div>
          <h3 class="text-lg font-medium mb-2">Implementation Details</h3>
          <div class="text-[var(--color-text)]">
            {% if component.codeDescription %}
              {{ component.codeDescription | markdown | safe }}
            {% else %}
              <p>No implementation details available.</p>
            {% endif %}
          </div>
        </div>
      </div>
      
      <div x-show="activeTab === 'props'" class="animate-fade-in" x-cloak>
        {% if component.props and component.props.length > 0 %}
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr>
                  <th>Property</th>
                  <th>Type</th>
                  <th>Default</th>
                  <th>Description</th>
                </tr>
              </thead>
              <tbody>
                {% for prop in component.props %}
                  <tr>
                    <td class="font-mono text-sm">{{ prop.name }}</td>
                    <td class="font-mono text-sm">{{ prop.type }}</td>
                    <td class="font-mono text-sm">{{ prop.default | default('â€”') }}</td>
                    <td>{{ prop.description | markdown | safe }}</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        {% else %}
          <div class="text-[var(--color-text-muted)]">
            No props documentation available.
          </div>
        {% endif %}
      </div>
      
      <div x-show="activeTab === 'examples'" class="animate-fade-in" x-cloak>
        {% if component.examples and component.examples.length > 0 %}
          <div class="space-y-8">
            {% for example in component.examples %}
              <div class="example">
                <h3 class="text-lg font-medium mb-2">{{ example.title }}</h3>
                {% if example.description %}
                  <p class="text-[var(--color-text-muted)] mb-4">{{ example.description }}</p>
                {% endif %}
                
                <div class="bg-[var(--color-bg-alt)] border border-[var(--color-border)] rounded-lg p-6 mb-4">
                  <div class="component-preview">
                    {% if example.template %}
                      {% include example.template %}
                    {% else %}
                      <div class="text-center text-[var(--color-text-muted)]">
                        Example not available
                      </div>
                    {% endif %}
                  </div>
                </div>
                
                <div class="bg-[var(--color-bg-alt)] rounded-lg overflow-hidden">
                  <pre class="language-html"><code>{{ example.code | safe }}</code></pre>
                </div>
              </div>
            {% endfor %}
          </div>
        {% else %}
          <div class="text-[var(--color-text-muted)]">
            No examples available.
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>