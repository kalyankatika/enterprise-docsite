<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% if title %}{{ title }} | {% endif %}{{ site.name }}</title>
  <meta name="description" content="{{ description or site.description }}">
  <link rel="stylesheet" href="/assets/css/styles.css">
  <link rel="icon" type="image/png" href="/assets/images/favicon.png">
  {% if meta.canonical %}<link rel="canonical" href="{{ meta.canonical }}">{% endif %}
  <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>
<body>
  <div class="flex h-screen overflow-hidden">
    <!-- Sidebar -->
    <div class="eds-sidebar bg-[var(--color-bg)] dark:bg-[var(--color-bg)] hidden md:block">
      <div class="flex items-center justify-between mb-8">
        <a href="/" class="block">
          <img src="/assets/images/eds-logo.svg" alt="{{ site.name }}" class="h-8">
        </a>
        <button class="theme-toggle" id="theme-toggle" title="Toggle dark mode">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
          </svg>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </button>
      </div>

      <div class="search-container mb-6">
        <input type="text" class="search-input" placeholder="Search documentation..." aria-label="Search documentation">
        <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"></circle>
          <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
        </svg>
      </div>

      <nav class="space-y-6">
        {% for section in navigation.sections %}
          <div class="nav-section">
            <h5 class="text-sm font-semibold uppercase tracking-wider text-[var(--color-text-muted)] mb-4">{{ section.label }}</h5>
            <ul class="space-y-3">
              {% for item in section.items %}
                <li>
                  <a href="{{ item.url }}" class="{% if page.url == item.url %}text-[var(--color-primary)] font-medium{% else %}text-[var(--color-text)]{% endif %} hover:text-[var(--color-primary)] block transition-colors duration-200">
                    {{ item.label }}
                  </a>
                  {% if item.children and page.url.startsWith(item.url) %}
                    <ul class="pl-4 mt-2 space-y-2">
                      {% for child in item.children %}
                        <li>
                          <a href="{{ child.url }}" class="{% if page.url == child.url %}text-[var(--color-primary)] font-medium{% else %}text-[var(--color-text-muted)]{% endif %} hover:text-[var(--color-primary)] text-sm block transition-colors duration-200">
                            {{ child.label }}
                          </a>
                        </li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endfor %}
      </nav>

      <div class="pt-8 mt-8 border-t border-[var(--color-border)]">
        <div class="flex items-center space-x-2">
          <div class="text-sm text-[var(--color-text-muted)]">Version</div>
          <select class="text-sm bg-[var(--color-bg-alt)] border border-[var(--color-border)] rounded px-2 py-1" id="version-selector">
            {% for version in versions %}
              <option value="{{ version.value }}" {% if version.current %}selected{% endif %}>{{ version.label }}</option>
            {% endfor %}
          </select>
        </div>
      </div>
    </div>

    <!-- Main content -->
    <div class="flex-1 flex flex-col overflow-hidden">
      <!-- Header -->
      <header class="eds-header py-4 px-6 flex items-center justify-between">
        <div class="flex items-center md:hidden">
          <button class="mobile-menu-toggle mr-4" aria-label="Toggle menu">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
          <a href="/" class="block">
            <img src="/assets/images/eds-logo.svg" alt="{{ site.name }}" class="h-6">
          </a>
        </div>
        <div class="hidden md:flex-1 md:flex md:items-center md:justify-between">
          <div class="flex-1">
            <h1 class="text-xl font-semibold mb-0">{{ title }}</h1>
          </div>
          <div class="flex items-center space-x-4">
            <a href="{{ site.github }}" class="text-[var(--color-text-muted)] hover:text-[var(--color-text)]" target="_blank" rel="noopener noreferrer">
              <span class="sr-only">GitHub</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
            </a>
            <div class="hidden md:block">
              <button class="theme-toggle" id="theme-toggle-header" title="Toggle dark mode">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      </header>

      <!-- Main content area -->
      <main class="flex-1 overflow-y-auto p-6 md:p-8">
        <div class="eds-container animate-fade-in">
          <div class="eds-content">
            {{ content | safe }}
          </div>
        </div>
      </main>

      <!-- Footer -->
      <footer class="eds-footer">
        <div class="eds-container">
          <div class="flex flex-col md:flex-row justify-between items-center">
            <div class="mb-4 md:mb-0">
              <p class="text-sm text-[var(--color-text-muted)]">
                &copy; {{ site.copyright }} {{ page.date.getFullYear() }}. All rights reserved.
              </p>
            </div>
            <div class="flex space-x-6">
              {% for link in site.footerLinks %}
                <a href="{{ link.url }}" class="text-sm text-[var(--color-text-muted)] hover:text-[var(--color-text)]">
                  {{ link.label }}
                </a>
              {% endfor %}
            </div>
          </div>
        </div>
      </footer>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="mobile-menu fixed inset-0 bg-black bg-opacity-50 z-50 hidden" aria-hidden="true">
    <div class="absolute top-0 left-0 h-full w-64 bg-[var(--color-bg)] p-6 overflow-y-auto transform -translate-x-full transition-transform duration-300 ease-in-out">
      <div class="flex items-center justify-between mb-8">
        <a href="/" class="block">
          <img src="/assets/images/eds-logo.svg" alt="{{ site.name }}" class="h-8">
        </a>
        <button class="mobile-menu-close" aria-label="Close menu">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- Mobile navigation -->
      <div class="search-container mb-6">
        <input type="text" class="search-input" placeholder="Search documentation..." aria-label="Search documentation">
        <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"></circle>
          <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
        </svg>
      </div>

      <nav class="space-y-6">
        {% for section in navigation.sections %}
          <div class="nav-section">
            <h5 class="text-sm font-semibold uppercase tracking-wider text-[var(--color-text-muted)] mb-4">{{ section.label }}</h5>
            <ul class="space-y-3">
              {% for item in section.items %}
                <li>
                  <a href="{{ item.url }}" class="{% if page.url == item.url %}text-[var(--color-primary)] font-medium{% else %}text-[var(--color-text)]{% endif %} hover:text-[var(--color-primary)] block transition-colors duration-200">
                    {{ item.label }}
                  </a>
                  {% if item.children %}
                    <ul class="pl-4 mt-2 space-y-2 {% if not page.url.startsWith(item.url) %}hidden{% endif %}">
                      {% for child in item.children %}
                        <li>
                          <a href="{{ child.url }}" class="{% if page.url == child.url %}text-[var(--color-primary)] font-medium{% else %}text-[var(--color-text-muted)]{% endif %} hover:text-[var(--color-primary)] text-sm block transition-colors duration-200">
                            {{ child.label }}
                          </a>
                        </li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endfor %}
      </nav>
    </div>
  </div>

  <script src="/assets/js/theme.js"></script>
  <script src="/assets/js/search.js"></script>
  <script src="/assets/js/main.js"></script>
</body>
</html>