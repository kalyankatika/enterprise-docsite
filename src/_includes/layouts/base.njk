<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }} | {{ site.name }}</title>
  <meta name="description" content="{{ description or site.description }}">
  <link rel="stylesheet" href="/assets/css/styles.css">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <script defer src="/assets/js/alpine.min.js"></script>
  <script defer src="/assets/js/main.js"></script>
</head>
<body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 min-h-screen flex flex-col">
  {% include "partials/header.njk" %}
  
  <div class="flex-grow flex">
    {% if not excludeSidebar %}
      {% include "partials/sidebar.njk" %}
    {% endif %}
    
    <main id="main-content" class="flex-grow py-8 px-4 md:px-8 max-w-full {% if not excludeSidebar %}md:ml-64{% endif %}">
      {{ content | safe }}
    </main>
  </div>
  
  {% include "partials/footer.njk" %}
  
  <script>
    // Initialize dark mode
    if (localStorage.getItem('darkMode') === 'true' || 
        (!localStorage.getItem('darkMode') && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
      document.documentElement.classList.add('dark');
    } else {
      document.documentElement.classList.remove('dark');
    }
  </script>
</body>
</html>