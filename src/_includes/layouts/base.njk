<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% if title %}{{ title }} | {% endif %}Enterprise Design System</title>
  <meta name="description" content="{{ description or site.description }}">
  <link rel="stylesheet" href="/assets/css/styles.css">
  <script src="/assets/js/alpine.min.js" defer></script>
  <script src="/assets/js/main.js" defer></script>
</head>
<body class="eds-body">
  <div class="eds-page">
    <header class="eds-header">
      <div class="eds-container">
        <div class="eds-header__inner">
          <a href="/" class="eds-header__logo">
            <span class="eds-logo">Enterprise Design System</span>
          </a>
          
          <nav class="eds-nav" aria-label="Main navigation">
            <button class="eds-nav__toggle" aria-expanded="false" aria-controls="main-menu">
              <span class="eds-nav__toggle-icon"></span>
              <span class="eds-sr-only">Menu</span>
            </button>
            
            <ul id="main-menu" class="eds-nav__menu">
              {% for item in navigation.main %}
              <li class="eds-nav__item{% if page.url == item.url %} eds-nav__item--active{% endif %}">
                <a href="{{ item.url }}" class="eds-nav__link">{{ item.title }}</a>
              </li>
              {% endfor %}
            </ul>
          </nav>
          
          <div class="eds-header__actions">
            <button class="eds-theme-toggle" aria-label="Toggle dark mode">
              <span class="eds-theme-toggle__icon"></span>
            </button>
            
            <div class="eds-search" x-data="{ searchOpen: false }">
              <button class="eds-search__toggle" @click="searchOpen = !searchOpen" aria-expanded="false" aria-controls="search-form">
                <span class="eds-search__toggle-icon"></span>
                <span class="eds-sr-only">Search</span>
              </button>
              
              <form id="search-form" class="eds-search__form" :class="{ 'eds-search__form--open': searchOpen }" action="/search/" method="get">
                <label for="search-input" class="eds-sr-only">Search</label>
                <input type="search" id="search-input" name="q" class="eds-search__input" placeholder="Search the documentation..." aria-label="Search the documentation">
                <button type="submit" class="eds-search__submit">
                  <span class="eds-sr-only">Submit search</span>
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </header>

    <main class="eds-main">
      {{ content | safe }}
    </main>

    <footer class="eds-footer">
      <div class="eds-container">
        <div class="eds-footer__inner">
          <div class="eds-footer__info">
            <p class="eds-footer__copyright">&copy; {{ page.date.getFullYear() or "2025" }} Enterprise Company. All rights reserved.</p>
          </div>
          
          <nav class="eds-footer__nav" aria-label="Footer navigation">
            <ul class="eds-footer__menu">
              {% for item in navigation.footer %}
              <li class="eds-footer__item">
                <a href="{{ item.url }}" class="eds-footer__link">{{ item.title }}</a>
              </li>
              {% endfor %}
            </ul>
          </nav>
        </div>
      </div>
    </footer>
  </div>
</body>
</html>