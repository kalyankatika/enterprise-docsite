<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }} | Enterprise Design System</title>
  <meta name="description" content="{{ description }}">
  <link rel="stylesheet" href="/assets/css/styles.css">
  <script src="/assets/js/alpine.min.js" defer></script>
  <script src="/assets/js/main.js" defer></script>
</head>
<body class="h-full bg-[var(--color-background)] text-[var(--color-text)] font-sans antialiased" 
      x-data="{ darkMode: localStorage.getItem('darkMode') === 'true', menuOpen: false }"
      :class="{ 'dark': darkMode }">

  {% include "partials/header.njk" %}
  
  <div class="flex min-h-screen">
    {% if sidebarType %}
      {% include "partials/sidebar.njk" %}
    {% endif %}
    
    <main class="flex-1 px-4 py-8 md:px-8 lg:px-12 max-w-screen-xl mx-auto">
      {{ content | safe }}
    </main>
  </div>
  
  {% include "partials/footer.njk" %}

  <script>
    // Initialize components after DOM is loaded
    document.addEventListener('DOMContentLoaded', function() {
      if (typeof initializeComponents === 'function') {
        initializeComponents();
      }
      
      if (typeof setupThemeToggle === 'function') {
        setupThemeToggle();
      }
      
      if (typeof setupSearchFunctionality === 'function') {
        setupSearchFunctionality();
      }
    });
  </script>
</body>
</html>