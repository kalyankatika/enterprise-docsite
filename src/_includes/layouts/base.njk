<!DOCTYPE html>
<html lang="en" {% if theme %}data-theme="{{ theme }}"{% endif %}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% if title %}{{ title }} - {% endif %}{{ site.name }}</title>
  <meta name="description" content="{% if description %}{{ description }}{% else %}{{ site.description }}{% endif %}">
  <link rel="stylesheet" href="/assets/css/styles.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;600&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  {% block head %}{% endblock %}
</head>
<body>
  <header class="bg-[var(--color-bg)] border-b border-[var(--color-border)] sticky top-0 z-50">
    <div class="container mx-auto px-4 py-4 flex justify-between items-center">
      <a href="/" class="flex items-center">
        <span class="text-2xl font-bold text-[var(--color-primary)]">EDS</span>
        <span class="text-xl ml-2 font-medium text-[var(--color-text)]">Docs</span>
      </a>
      <div class="flex items-center space-x-6">
        <nav class="hidden md:flex space-x-6">
          {% for item in navigation.main %}
            <a href="{{ item.url }}" class="text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors duration-200">{{ item.title }}</a>
          {% endfor %}
        </nav>
        <div class="flex items-center space-x-4">
          <button id="themeToggle" class="p-2 rounded-full hover:bg-[var(--color-bg-alt)] transition-colors duration-200" aria-label="Toggle dark mode">
            <svg id="sunIcon" class="w-5 h-5 text-[var(--color-text-muted)]" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
            </svg>
            <svg id="moonIcon" class="w-5 h-5 text-[var(--color-text-muted)] hidden" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
            </svg>
          </button>
          <div class="relative">
            <button id="searchToggle" class="p-2 rounded-full hover:bg-[var(--color-bg-alt)] transition-colors duration-200" aria-label="Search documentation">
              <svg class="w-5 h-5 text-[var(--color-text-muted)]" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path>
              </svg>
            </button>
            <div id="searchPanel" class="absolute right-0 mt-2 w-72 bg-[var(--color-bg)] border border-[var(--color-border)] rounded-lg shadow-lg p-4 hidden">
              <div class="relative">
                <input type="text" id="searchInput" placeholder="Search documentation..." class="w-full px-4 py-2 rounded-md border border-[var(--color-border)] bg-[var(--color-bg-alt)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)] focus:border-transparent">
                <div id="searchResults" class="mt-2 max-h-60 overflow-y-auto"></div>
              </div>
            </div>
          </div>
          <button id="mobileMenuToggle" class="md:hidden p-2 rounded-full hover:bg-[var(--color-bg-alt)] transition-colors duration-200" aria-label="Toggle mobile menu">
            <svg class="w-5 h-5 text-[var(--color-text-muted)]" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
    <div id="mobileMenu" class="container mx-auto px-4 py-4 border-t border-[var(--color-border)] hidden md:hidden">
      <nav class="flex flex-col space-y-4">
        {% for item in navigation.main %}
          <a href="{{ item.url }}" class="text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors duration-200">{{ item.title }}</a>
        {% endfor %}
      </nav>
    </div>
  </header>

  <main>
    {% block content %}{{ content | safe }}{% endblock %}
  </main>

  <footer class="bg-[var(--color-bg-alt)] border-t border-[var(--color-border)]">
    <div class="container mx-auto px-4 py-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="flex items-center">
          <span class="text-xl font-bold text-[var(--color-primary)]">EDS</span>
          <span class="text-lg ml-2 font-medium text-[var(--color-text)]">Docs</span>
        </div>
        <div class="mt-4 md:mt-0">
          <p class="text-[var(--color-text-muted)]">&copy; {{ site.copyright }} {{ site.buildYear }}</p>
        </div>
      </div>
      <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-8">
        <div>
          <h3 class="text-lg font-medium mb-4">Documentation</h3>
          <ul class="space-y-2">
            {% for item in navigation.footer.docs %}
              <li><a href="{{ item.url }}" class="text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors duration-200">{{ item.title }}</a></li>
            {% endfor %}
          </ul>
        </div>
        <div>
          <h3 class="text-lg font-medium mb-4">Resources</h3>
          <ul class="space-y-2">
            {% for item in navigation.footer.resources %}
              <li><a href="{{ item.url }}" class="text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors duration-200">{{ item.title }}</a></li>
            {% endfor %}
          </ul>
        </div>
        <div>
          <h3 class="text-lg font-medium mb-4">Community</h3>
          <ul class="space-y-2">
            {% for item in navigation.footer.community %}
              <li><a href="{{ item.url }}" class="text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors duration-200">{{ item.title }}</a></li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </footer>

  <script src="/assets/js/theme.js"></script>
  <script src="/assets/js/search.js"></script>
  <script src="/assets/js/main.js"></script>
  {% block scripts %}{% endblock %}
</body>
</html>