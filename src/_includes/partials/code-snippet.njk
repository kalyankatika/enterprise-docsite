<div class="code-snippet" x-data="{ activeTab: 'html' }">
  <div class="code-snippet-tabs">
    <button 
      class="code-snippet-tab" 
      :class="{ 'active': activeTab === 'html' }" 
      @click="activeTab = 'html'"
    >
      HTML
    </button>
    <button 
      class="code-snippet-tab" 
      :class="{ 'active': activeTab === 'js' }" 
      @click="activeTab = 'js'"
    >
      JavaScript
    </button>
    <button 
      class="code-snippet-tab" 
      :class="{ 'active': activeTab === 'css' }" 
      @click="activeTab = 'css'"
    >
      CSS
    </button>
    <button 
      class="code-snippet-copy" 
      @click="
        const codeEl = $refs[activeTab];
        navigator.clipboard.writeText(codeEl.textContent);
        $el.textContent = 'Copied!';
        setTimeout(() => {
          $el.textContent = 'Copy';
        }, 2000);
      "
    >
      Copy
    </button>
  </div>
  
  <div class="code-snippet-content">
    <pre x-show="activeTab === 'html'" x-ref="html"><code class="language-html">&lt;div class="accordion"&gt;
  &lt;div class="accordion-item"&gt;
    &lt;button class="accordion-header" aria-expanded="false" aria-controls="accordion-panel-1"&gt;
      &lt;span&gt;Accordion Header 1&lt;/span&gt;
      &lt;svg class="accordion-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"&gt;
        &lt;polyline points="6 9 12 15 18 9"&gt;&lt;/polyline&gt;
      &lt;/svg&gt;
    &lt;/button&gt;
