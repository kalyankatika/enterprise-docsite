{% set currentUrl = page.url %}

<div class="w-64 hidden md:block">
  <div class="sticky top-24 pl-2 pr-4 py-4 overflow-y-auto max-h-[calc(100vh-120px)] mb-8">
    <nav class="space-y-1 nav-main" aria-label="Main Navigation">
      {# Main navigation items rendered from navigation data #}
      <ul class="space-y-2">
        <li>
          <a href="/" class="flex items-center py-1 hover:text-[var(--color-primary)] transition-colors {% if currentUrl === '/' %}text-[var(--color-primary)] font-medium{% endif %}">
            <span>Home</span>
          </a>
        </li>

        <li>
          <a href="/getting-started/" class="flex items-center justify-between py-1 hover:text-[var(--color-primary)] transition-colors {% if currentUrl.includes('/getting-started/') %}text-[var(--color-primary)] font-medium{% endif %}">
            <span>Getting Started</span>
          </a>
        </li>

        <li class="pt-2">
          <div class="text-xs font-medium uppercase text-[var(--color-text-muted)] tracking-wider py-1">Design System</div>
          <ul class="space-y-1 mt-1 ml-2">
            <li>
              <a href="/design-system/foundations/" class="flex items-center justify-between py-1 hover:text-[var(--color-primary)] transition-colors {% if currentUrl.includes('/design-system/foundations/') %}text-[var(--color-primary)] font-medium{% endif %}">
                <span>Foundations</span>
              </a>
            </li>
            <li>
              <a href="/design-system/patterns/" class="flex items-center justify-between py-1 hover:text-[var(--color-primary)] transition-colors {% if currentUrl.includes('/design-system/patterns/') %}text-[var(--color-primary)] font-medium{% endif %}">
                <span>Patterns</span>
              </a>
            </li>
          </ul>
        </li>

        <li class="pt-2">
          <div class="text-xs font-medium uppercase text-[var(--color-text-muted)] tracking-wider py-1">Components</div>
          <ul class="space-y-1 mt-1 ml-2">
            <li>
              <a href="/components/" class="flex items-center justify-between py-1 hover:text-[var(--color-primary)] transition-colors {% if currentUrl.includes('/components/') %}text-[var(--color-primary)] font-medium{% endif %}">
                <span>Components</span>
                <span class="text-xs">
                  {% if currentUrl.includes('/components/') %}
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd" />
                    </svg>
                  {% else %}
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  {% endif %}
                </span>
              </a>
              {% if currentUrl.includes('/components/') %}
                <ul class="ml-4 space-y-1 mt-1">
                  <li>
                    <a href="/components/layout/" class="flex items-center py-1 hover:text-[var(--color-primary)] transition-colors {% if currentUrl.includes('/components/layout/') %}text-[var(--color-primary)] font-medium{% endif %}">
                      <span>Layout</span>
                    </a>
                  </li>

                  <li>
                    <a href="/components/navigation/" class="flex items-center py-1 hover:text-[var(--color-primary)] transition-colors {% if currentUrl.includes('/components/navigation/') %}text-[var(--color-primary)] font-medium{% endif %}">
                      <span>Navigation</span>
                    </a>
                  </li>

                  <li>
                    <a href="/components/feedback/" class="flex items-center py-1 hover:text-[var(--color-primary)] transition-colors {% if currentUrl.includes('/components/feedback/') %}text-[var(--color-primary)] font-medium{% endif %}">
                      <span>Feedback</span>
                    </a>
                  </li>
                </ul>
              {% endif %}
            </li>

          </ul>
        </li>

        <li class="pt-2">
          <div class="text-xs font-medium uppercase text-[var(--color-text-muted)] tracking-wider py-1">Resources</div>
          <ul class="space-y-1 mt-1 ml-2">
            <li>
              <a href="/guides/" class="flex items-center py-1 hover:text-[var(--color-primary)] transition-colors {% if currentUrl.includes('/guides/') %}text-[var(--color-primary)] font-medium{% endif %}">
                <span>Guides</span>
              </a>
            </li>
            <li>
              <a href="/resources/migration-tools/" class="flex items-center py-1 hover:text-[var(--color-primary)] transition-colors {% if currentUrl.includes('/resources/migration-tools/') %}text-[var(--color-primary)] font-medium{% endif %}">
                <span>Migration Tools</span>
              </a>
            </li>
          </ul>
        </li>

        <li class="pt-2">
          <div class="text-xs font-medium uppercase text-[var(--color-text-muted)] tracking-wider py-1">Navigation Views</div>
          <ul class="space-y-1 mt-1 ml-2">
            <li>
              <a href="/navigation/by-channel/" class="flex items-center py-1 hover:text-[var(--color-primary)] transition-colors {% if currentUrl.includes('/navigation/by-channel/') %}text-[var(--color-primary)] font-medium{% endif %}">
                <span>By Channel</span>
              </a>
            </li>
            <li>
              <a href="/navigation/by-type/" class="flex items-center py-1 hover:text-[var(--color-primary)] transition-colors {% if currentUrl.includes('/navigation/by-type/') %}text-[var(--color-primary)] font-medium{% endif %}">
                <span>By Type</span>
              </a>
            </li>
            <li>
              <a href="/navigation/by-owner/" class="flex items-center py-1 hover:text-[var(--color-primary)] transition-colors {% if currentUrl.includes('/navigation/by-owner/') %}text-[var(--color-primary)] font-medium{% endif %}">
                <span>By Owner</span>
              </a>
            </li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</div>