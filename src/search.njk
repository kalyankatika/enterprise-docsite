<script>
  document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('search-page-input');
    const searchResults = document.getElementById('search-page-results');
    
    if (searchInput && searchResults) {
      // Get search term from URL if present
      const urlParams = new URLSearchParams(window.location.search);
      const searchTerm = urlParams.get('q');
      if (searchTerm) {
        searchInput.value = searchTerm;
        performPageSearch(searchTerm);
      }
      
      // Perform search when typing
      let debounceTimeout;
      searchInput.addEventListener('input', () => {
        clearTimeout(debounceTimeout);
        debounceTimeout = setTimeout(() => {
          const query = searchInput.value.trim();
          // Update URL with search term
          const newUrl = query ? 
            `${window.location.pathname}?q=${encodeURIComponent(query)}` : 
            window.location.pathname;
          window.history.replaceState({}, '', newUrl);
          
          if (query.length > 1) {
            performPageSearch(query);
          } else {
            searchResults.innerHTML = `
              <div class="text-center text-[var(--color-text-muted)]">
                Enter a search term above to find content across the documentation.
              </div>
            `;
          }
        }, 300);
      });
      
      function performPageSearch(query) {
        // Show loading state
        searchResults.innerHTML = `
          <div class="text-center p-4">
            <div class="inline-block h-8 w-8 animate-spin rounded-full border-4 border-solid border-[var(--color-primary)] border-r-transparent align-[-0.125em]" role="status">
              <span class="sr-only">Loading...</span>
            </div>
            <p class="mt-2 text-[var(--color-text-muted)]">Searching...</p>
          </div>
        `;
        
        // Fetch search data
        fetch('/search-index.json')
          .then(response => response.json())
          .then(searchData => {
            // Perform search
            const results = [];
            
            for (const key in searchData) {
              const item = searchData[key];
              const titleScore = scoreMatch(item.title.toLowerCase(), query.toLowerCase());
              const contentScore = scoreMatch(item.content.toLowerCase(), query.toLowerCase());
              
              const totalScore = titleScore * 2 + contentScore;
              
              if (totalScore > 0) {
                results.push({
                  title: item.title,
                  url: item.url,
                  snippet: getResultSnippet(item.content, query),
                  score: totalScore
                });
              }
            }
            
            // Sort results by score
            results.sort((a, b) => b.score - a.score);
            
            // Display results
            if (results.length === 0) {
              searchResults.innerHTML = `
                <div class="text-center p-6 bg-[var(--color-bg-alt)] rounded-lg border border-[var(--color-border)]">
                  <p class="text-lg font-medium mb-2">No results found</p>
                  <p class="text-[var(--color-text-muted)]">We couldn't find any matches for "${query}". Try different keywords or check for typos.</p>
                </div>
              `;
            } else {
              const resultsHTML = results.map(result => `
                <a href="${result.url}" class="block p-4 bg-[var(--color-bg)] rounded-lg border border-[var(--color-border)] hover:bg-[var(--color-bg-alt)] transition-colors">
                  <div class="font-medium text-lg">${highlightMatches(result.title, query)}</div>
                  <div class="text-sm text-[var(--color-text-muted)] mb-2">${result.url}</div>
                  <div>${result.snippet}</div>
                </a>
              `).join('');
              
              searchResults.innerHTML = `
                <div class="mb-4">
                  <p class="text-[var(--color-text-muted)]">Found ${results.length} ${results.length === 1 ? 'result' : 'results'} for "${query}"</p>
                </div>
                <div class="space-y-4">
                  ${resultsHTML}
                </div>
              `;
            }
          })
          .catch(error => {
            console.error('Error loading search data:', error);
            searchResults.innerHTML = `
              <div class="text-center p-6 bg-[var(--color-bg-alt)] rounded-lg border border-[var(--color-border)]">
                <p class="text-lg font-medium mb-2">Error performing search</p>
                <p class="text-[var(--color-text-muted)]">There was a problem loading the search data. Please try again later.</p>
              </div>
            `;
          });
      }
      
      function scoreMatch(text, query) {
        // Direct match
        if (text.includes(query)) {
          return 10;
        }
        
        // Partial word matches
        const words = text.split(/\s+/);
        for (const word of words) {
          if (word.startsWith(query)) {
            return 5;
          }
          if (word.includes(query)) {
            return 3;
          }
        }
        
        return 0;
      }
      
      function getResultSnippet(content, query) {
        const maxLength = 150;
        const lowerContent = content.toLowerCase();
        const lowerQuery = query.toLowerCase();
        const index = lowerContent.indexOf(lowerQuery);
        
        if (index === -1) {
          // If query not found exactly, return beginning of content
          return content.substring(0, maxLength) + '...';
        }
        
        // Calculate snippet start and end positions
        let start = Math.max(0, index - 60);
        let end = Math.min(content.length, index + query.length + 60);
        
        // Adjust to not cut words
        while (start > 0 && content[start] !== ' ') {
          start--;
        }
        
        while (end < content.length && content[end] !== ' ') {
          end++;
        }
        
        // Create snippet
        let snippet = content.substring(start, end);
        
        // Add ellipsis if needed
        if (start > 0) {
          snippet = '...' + snippet;
        }
        
        if (end < content.length) {
          snippet = snippet + '...';
        }
        
        return highlightMatches(snippet, query);
      }
      
      function highlightMatches(text, query) {
        const regex = new RegExp('(' + escapeRegExp(query) + ')', 'gi');
        return text.replace(regex, '<span class="search-highlight">$1</span>');
      }
      
      function escapeRegExp(string) {
        return string.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
      }
    }
  });
</script>