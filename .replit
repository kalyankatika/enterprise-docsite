modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "11ty Development Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "bash_mkdir"

[[workflows.workflow]]
name = "11ty Development Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx @11ty/eleventy --serve --port=5000"
waitForPort = 5000

[[workflows.workflow]]
name = "bash_mkdir"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p src/components/inputs src/components/layout src/components/navigation src/components/feedback"

[deployment]
run = ["sh", "-c", "npx @11ty/eleventy --serve --port=5000"]
