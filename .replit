modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "11ty Development Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "create_dirs"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "create_asset_dirs"

[[workflows.workflow]]
name = "11ty Development Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx @11ty/eleventy --serve --port=5000"
waitForPort = 5000

[[workflows.workflow]]
name = "create_dirs"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p src/updates src/design-tokens src/patterns src/resources src/guidelines src/components/{layout,navigation,feedback} src/_includes/layouts"

[[workflows.workflow]]
name = "create_asset_dirs"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p src/assets/images src/assets/fonts"

[deployment]
run = ["sh", "-c", "npx @11ty/eleventy --serve --port=5000"]

[[ports]]
localPort = 5000
externalPort = 80
