<script>
  (() => {
    const buttons = document.querySelectorAll('abc-button[data-state]');
    if (buttons?.length) {
      buttons.forEach(button => {
        button.addEventListener('abc-component-ready', e => {
          if (e.target instanceof customElements.get('abc-button')) {
            e.target
              .querySelector('.abc-button-root')?.classList?.add('abc-button--' + button.dataset.state);
          }
        });
      });
    }
  })();
