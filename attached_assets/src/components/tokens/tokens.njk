{% block code_tab %}
    {% for key,val in tokenData.eds %}
        {% if key !== "color" %}
        <h2 class="docsite__linkable-heading">{{key}}</h2>
        <table>
            <tbody>
                {% for itemKey, itemVal in val %}
                    {% if (itemVal | isstring) %}
                        <tr>
                            <td>{{itemKey}}</td>
                            <td>{{itemVal}}</td>
                        </tr>
                    {% else %}
                        {% for childKey, childVal in itemVal %}
                        <tr>
                            <td>{{itemKey}} - {{childKey}}</td>
                            <td>{{childVal}}</td>
                        </tr>
                        {% endfor %}
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
        {% endif %}
    {% endfor %}
{% endblock %}

