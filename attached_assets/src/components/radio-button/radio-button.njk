            eds-aria-describedby="error-a11y-alert"
            eds-error
        >
            <eds-radio eds-name="preference" eds-value="phone">
                Phone
            </eds-radio>

            <eds-radio eds-name="preference" eds-value="email">
                Email
            </eds-radio>

            <eds-radio eds-name="preference" eds-value="smoke-signal">
                Smoke signal
            </eds-radio>
        </eds-radio-group>

        <eds-inline-alert eds-id="error-a11y-alert">
